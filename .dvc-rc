alias dvgcwrn="dvc gc -w --not-in-remote --dry -f"

dvc_to_md5() {
    if [ $# -eq 0 ]; then
        cat | yq -r '.outs[0].md5'
    else
        for path in "$@"; do
            num_outs="$(cat "$path" | yq -r '.outs | length')"
            if [ "$num_outs" != "1" ]; then
                echo "$path: found $num_outs outs, expected 1" >&2
                return 1
            fi
            cat "$path" | yq -r '.outs[0].md5'
        done
    fi
}
export -f dvc_to_md5
defn dv2m dvc_to_md5
defn dv5 dvc_to_md5

