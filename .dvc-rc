dvc_mv_to_git() {
    for path in "$@"; do
        path="${path%.dvc}"
        dvc_path="${path}.dvc"
        dvc checkout "$path"
        dvc unprotect "$path"
        git rm "$dvc_path"
        git add -f "$path"
    done
}
export -f dvc_mv_to_git
defn dv2g dvc_mv_to_git

